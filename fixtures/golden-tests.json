{
  "$schema": "./golden-tests.schema.json",
  "version": "2.0",
  "mcp_name": "Vietnamese Law MCP",
  "description": "Golden contract tests for the Vietnamese Law MCP covering 93 laws: Constitution, Civil/Penal Codes, Cybersecurity Law, Personal Data Protection, Enterprise Law, E-Transactions, and 80+ more statutes",
  "tests": [
    {
      "id": "vn-001",
      "category": "article_retrieval",
      "description": "Retrieve Article 21 of the Constitution 2013 -- right to privacy",
      "tool": "get_provision",
      "input": {
        "law_identifier": "constitution-2013",
        "article": "21"
      },
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["privacy", "bất khả xâm phạm", "riêng tư"],
        "fields_present": ["text", "article_number"],
        "text_not_empty": true
      }
    },
    {
      "id": "vn-002",
      "category": "article_retrieval",
      "description": "Retrieve Article 1 of the Cybersecurity Law 2018 -- scope of regulation",
      "tool": "get_provision",
      "input": {
        "law_identifier": "cybersecurity-law-2018",
        "article": "1"
      },
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["an ninh mạng", "cybersecurity", "không gian mạng"],
        "fields_present": ["text", "article_number"],
        "text_not_empty": true
      }
    },
    {
      "id": "vn-003",
      "category": "article_retrieval",
      "description": "Retrieve Article 285 of the Penal Code 2015 -- cybercrime (producing/distributing malware)",
      "tool": "get_provision",
      "input": {
        "law_identifier": "penal-code-2015",
        "article": "285"
      },
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["phần mềm", "máy tính", "mạng"],
        "fields_present": ["text", "article_number"],
        "text_not_empty": true
      }
    },
    {
      "id": "vn-004",
      "category": "article_retrieval",
      "description": "Retrieve Article 1 of the Civil Code 2015 -- scope of civil law",
      "tool": "get_provision",
      "input": {
        "law_identifier": "civil-code-2015",
        "article": "1"
      },
      "assertions": {
        "result_not_empty": true,
        "fields_present": ["text"],
        "text_not_empty": true
      }
    },
    {
      "id": "vn-005",
      "category": "article_retrieval",
      "description": "Retrieve Article 1 of the Personal Data Protection Decree 2023 -- scope",
      "tool": "get_provision",
      "input": {
        "law_identifier": "personal-data-protection-decree-2023",
        "article": "1"
      },
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["dữ liệu cá nhân", "personal data", "bảo vệ"],
        "fields_present": ["text", "article_number"],
        "text_not_empty": true
      }
    },
    {
      "id": "vn-006",
      "category": "search",
      "description": "Full-text search for 'dữ liệu cá nhân' returns personal data protection provisions",
      "tool": "search_legislation",
      "input": {
        "query": "dữ liệu cá nhân"
      },
      "assertions": {
        "result_not_empty": true,
        "min_results": 1,
        "any_result_contains": ["dữ liệu", "cá nhân"]
      }
    },
    {
      "id": "vn-007",
      "category": "search",
      "description": "Full-text search for 'an ninh mạng' returns cybersecurity provisions",
      "tool": "search_legislation",
      "input": {
        "query": "an ninh mạng"
      },
      "assertions": {
        "result_not_empty": true,
        "min_results": 1,
        "any_result_contains": ["an ninh", "mạng"]
      }
    },
    {
      "id": "vn-008",
      "category": "search",
      "description": "Full-text search for 'doanh nghiệp' returns enterprise law provisions",
      "tool": "search_legislation",
      "input": {
        "query": "doanh nghiệp"
      },
      "assertions": {
        "result_not_empty": true,
        "min_results": 1,
        "any_result_contains": ["doanh nghiệp"]
      }
    },
    {
      "id": "vn-009",
      "category": "citation_roundtrip",
      "description": "Citation for Cybersecurity Law Article 26 includes thuvienphapluat.vn URL",
      "tool": "get_provision",
      "input": {
        "law_identifier": "cybersecurity-law-2018",
        "article": "26"
      },
      "assertions": {
        "result_not_empty": true,
        "citation_url_pattern": "thuvienphapluat\\.vn",
        "text_not_empty": true
      }
    },
    {
      "id": "vn-010",
      "category": "article_retrieval",
      "description": "Retrieve Article 1 of the Labour Code 2019 -- scope of labour law",
      "tool": "get_provision",
      "input": {
        "law_identifier": "labour-code-2019",
        "article": "1"
      },
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["lao động", "người lao động", "người sử dụng lao động"],
        "fields_present": ["text"],
        "text_not_empty": true
      }
    },
    {
      "id": "vn-011",
      "category": "negative_test",
      "description": "Non-existent Vietnamese law returns graceful error or empty result",
      "tool": "get_provision",
      "input": {
        "law_identifier": "fictional-law-9999",
        "article": "1"
      },
      "assertions": {
        "handles_gracefully": true
      }
    },
    {
      "id": "vn-012",
      "category": "negative_test",
      "description": "Malformed article number returns graceful error or empty result",
      "tool": "get_provision",
      "input": {
        "law_identifier": "cybersecurity-law-2018",
        "article": "999ZZZ-INVALID"
      },
      "assertions": {
        "handles_gracefully": true
      }
    }
  ]
}
